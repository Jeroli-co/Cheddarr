{
  "name": "Cheddarr",
  "description": "Hub for media server architecture.",
  "repository": "https://github.com/Jeroli-co/Cheddarr",
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "heroku/python"
    }
  ],
  "env": {
    "FLASK_APP": {
      "value": "cheddarr"
    }
  },
  "environments": {
    "review": {
      "env": {
        "FLASK_DOMAIN": {
          "value": "${HEROKU_APP_NAME}.herokuapp.com"
        }
      }
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "free"
    },
    "worker": {
      "quantity": 1,
      "size": "free"
    }
  }
}